<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>net.lihui.app.plugin.thoughtworkscodereviewtools</id>
    <name>Thoughtworks Code Review Tools</name>
    <vendor url="https://lihui.net" email="me@lihui.net">lihui</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.github.tcpgnl.thoughtworkscodereviewtools.services.MyApplicationService"/>
        <projectService
                serviceImplementation="com.github.tcpgnl.thoughtworkscodereviewtools.services.MyProjectService"/>
        <!--  显示提示框  -->
        <notificationGroup id="Custom Notification Group" displayType="BALLOON"/>
        <applicationConfigurable parentId="root"
                                 instance="net.lihui.app.plugin.thoughtworkscodereviewtools.store.TwCodeReviewSettingsConfigurable"
                                 id="net.lihui.app.plugin.thoughtworkscodereviewtools.store.TwCodeReviewSettingsConfigurable"
                                 displayName="Tw Code Review Tools"/>
        <applicationService
                serviceImplementation="net.lihui.app.plugin.thoughtworkscodereviewtools.store.TwCodeReviewSettingsState"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.tcpgnl.thoughtworkscodereviewtools.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <!--  设置Action  -->
    <actions>
        <action id="net.lihui.app.plugin.thoughtworkscodereviewtools.CodeReviewFeedbackAction"
                class="net.lihui.app.plugin.thoughtworkscodereviewtools.CodeReviewFeedbackAction" text="Code Review Feedback"
                description="Submit code review message">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="control alt I"/>
        </action>
    </actions>

</idea-plugin>
